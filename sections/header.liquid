{% schema %}
{
  "name": "Header",
  "class": "header-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "fixed_header",
      "label": "Enable fixed ('sticky') header",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "behind_menu",
      "label": "Position header over content",
      "default": true,
      "info": "This will place the header directly over wide display slideshow or banner image content."
    },
    {
      "type": "header",
      "content": "Announcement bar"
    },
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "home_page_only",
      "label": "Home page only",
      "default": false
    },
    {
      "type": "richtext",
      "id": "announcement_text",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "announcement_link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "promo_bg_color",
      "label": "Bar",
      "default": "#212121"
    },
    {
      "type": "color",
      "id": "promo_text_color",
      "label": "Text",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo",
      "info": "560px wide recommended"
    },
    {
      "type": "image_picker",
      "id": "logo_home",
      "label": "Secondary logo over content (optional)",
      "info": "560px wide recommended"
    },
    {
      "type": "image_picker",
      "id": "logo_mobile",
      "label": "Mobile logo (optional)",
      "info": "560px wide recommended"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo display width",
      "step": 5,
      "min": 100,
      "max": 280,
      "default": 280,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "logo_top_padding",
      "label": "Logo top padding",
      "info": "[Learn more](https:\/\/help.outofthesandbox.com\/hc\/en-us\/articles\/115006910627)",
      "min": 0,
      "max": 30,
      "default": 5,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "mobile_logo_placement",
      "label": "Mobile logo placement",
      "options": [
        {
          "value": "inside",
          "label": "Inside header"
        },
        {
          "value": "below",
          "label": "Below header"
        }
      ],
      "default": "below"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "main_linklist",
      "label": "Main menu",
      "default": "main-menu"
    },
{
      "type": "link_list",
      "id": "menu_items",
      "label": "Article Menu"
    },
    {
      "type": "range",
      "id": "dropdown_column_links",
      "label": "Number of drop-down links in first column",
      "min": 5,
      "max": 30,
      "default": 10
    },
    {
      "type": "range",
      "id": "menu_top_padding",
      "label": "Navigation top padding",
      "info": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/115006910627)",
      "min": 0,
      "max": 30,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "content_top_padding",
      "label": "Content area top padding",
      "info": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/115006910627)",
      "min": 50,
      "max": 300,
      "step": 5,
      "default": 150,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "social_icons_enabled",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "search_enabled",
      "label": "Show search",
      "default": true
    }
  ]
}
