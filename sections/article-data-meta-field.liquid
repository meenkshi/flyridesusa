       "settings": [
         {
           "type": "link_list",
           "id": "custom_menu_linklist",
           "label": "Menu"
         }
       ]
     },
     {
       "type": "newsletter",
       "name": "Newsletter sign up form",
       "limit": 1,
       "settings": [
          {
            "type": "richtext",
            "id": "newsletter_richtext",
            "label": "Text"
          }
       ]
     },
