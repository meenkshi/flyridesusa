            <img src="{{ page_detail_image_3 | img_url: '2048x' }}" alt="{{ page_detail_image_3.alt | escape }}">
          </noscript>
        </a>
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>
</div>